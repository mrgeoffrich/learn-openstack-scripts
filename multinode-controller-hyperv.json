{
    "variables": {
      "cpu": "2",
      "ram_size": "2048",
      "hyperv_switch":"Main External",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "os_deploy_ip":"",
      "subnet_mask":"",
      "gateway":"",
      "dns_1":"",
      "dns_2":"",
      "iso_checksum":"a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",    
      "iso_checksum_type":"sha256",
      "iso_url":"http://releases.ubuntu.com/16.04/ubuntu-16.04.3-server-amd64.iso",
      "iso_filename":"iso/ubuntu-16.04.3-server-amd64.iso"
    },
    "provisioners": [
      {
         "environment_vars": [
          "SSH_USERNAME={{user `ssh_username`}}",
          "SSH_PASSWORD={{user `ssh_password`}}",
          "STATIC_IP={{user `os_controller_ip`}}",
          "SUBNET_MASK={{user `subnet_mask`}}",
          "GATEWAY={{user `gateway`}}",
          "DNS_1={{user `dns_1`}}",
          "DNS_2={{user `dns_2`}}"
        ],
        "type": "shell",
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
         "scripts": [
          "scripts/packages.sh",
          "scripts/setup-apt-cache.sh",
          "scripts/hyperv.sh",
          "scripts/multinode-controller.sh",
          "scripts/multinode-common-net-hyperv.sh",
          "scripts/multinode-common.sh",
          "scripts/cleanup.sh"
        ]
      }
    ],
    "builders": [
      {
        "type": "hyperv-iso",
        "boot_command": [
          "<esc><wait10><esc><esc><enter><wait>",
          "set gfxpayload=1024x768<enter>",
          "linux /install/vmlinuz ",
          "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseedhyperv.cfg ",
          "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
          "hostname={{.Name}} ",
          "fb=false debconf/frontend=noninteractive ",
          "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
          "keyboard-configuration/variant=USA console-setup/ask_detect=false <enter>",
          "initrd /install/initrd.gz<enter>",
          "boot<enter>"
        ],
        "boot_wait": "10s",
        "communicator":"ssh",
        "disk_size": 81920,
        "enable_secure_boot":false,
        "generation": 2,
        "guest_additions_mode":"disable",
        "http_directory": "http",
        "ram_size": "{{user `ram_size`}}",
        "cpu": "{{user `cpu`}}",
        "iso_urls": [
          "{{user `iso_filename`}}",
          "{{user `iso_url`}}"
        ],
        "iso_checksum_type": "{{ user `iso_checksum_type` }}",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "output_directory": "hyperv/os-controller",
        "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_port": 22,
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_timeout" : "4h",
        "switch_name": "{{user `hyperv_switch`}}",
        "vm_name": "os-controller"
      }
    ]
  }